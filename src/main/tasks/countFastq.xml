<?xml version="1.1" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/workflow/task"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/workflow/task http://uk-cri-lbio01/schema/workflow/task-1.4.xsd">

    <name>countFastq</name>
    <description>Task for counting records in a FASTQ file.</description>

    <program type="commandLine">
        <executable>@{java.home}/bin/java ${jvmargs} ${classpath} org.cruk.seq.CountFastq ${datasetId} ${outputFile} ${fastqFile}</executable>
    </program>

    <inputs>
        <input name="fastqFile" required="true" quoted="true"/>
    </inputs>

    <outputs>
        <output name="outputFile" flag="-o" quoted="true"/>
    </outputs>

    <arguments>
        <arg name="datasetId" flag="-i" required="false"
            description="The dataset identifier to use in the summary output file."/>
        <arg name="classpath" flag="-classpath" required="false" quoted="true" default="@{java.class.path}" />
        <arg name="jvmargs" required="false" description="Java Virtual Machine arguments."/>
    </arguments>

</task:task>
