<?xml version="1.1" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/workflow/task"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/workflow/task http://content.cruk.cam.ac.uk/bioinformatics/schema/workflow/task-1.5.xsd">

    <name>sampleFastqMultiplex</name>
    <description>Task for looping over multiple data sets and sampling FASTQ records from each.</description>

    <program type="class">
        <executable>org.cruk.mga.workflow.DatasetIteratorTask</executable>
    </program>

    <inputs>
        <input name="sampleSheetFile"/>
    </inputs>

    <outputs>
        <output name="sampleFastqFiles" required="true" plurality="multiple"/>
        <output name="sampleSummaryFiles" required="true" plurality="multiple"/>
    </outputs>

</task:task>
