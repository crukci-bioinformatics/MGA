<?xml version="1.1" encoding="ISO-8859-1" ?>
<task:task xmlns:task="http://cancerresearchuk.org/workflow/task"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/workflow/task http://content.cruk.cam.ac.uk/bioinformatics/schema/workflow/task-1.5.xsd">

    <name>alignmentWrapper</name>
    <description>Wrapper for alignment tasks that handles the special case of having no query sequences.</description>

    <program type="class">
        <executable>org.cruk.mga.workflow.AlignmentWrapperTask</executable>
    </program>

    <inputs>
        <input name="queryFile" required="true" quoted="true"/>
    </inputs>

    <outputs>
        <output name="alignmentFile" quoted="true"/>
    </outputs>

</task:task>
