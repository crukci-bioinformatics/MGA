<?xml version="1.1" encoding="ISO-8859-1"?>
<task:task xmlns:task="http://cancerresearchuk.org/workflow/task"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://cancerresearchuk.org/workflow/task http://content.cruk.cam.ac.uk/bioinformatics/schema/workflow/task-1.8.xsd">

    <name>createDatasetListing</name>
    <description>Task creating a dataset file listing from a sample sheet that can be used by a table loop in the pipeline definition.</description>

    <program type="class">
        <executable>org.cruk.mga.workflow.CreateDatasetListing</executable>
    </program>

    <inputs>
        <input name="sampleSheetFile"/>
    </inputs>

    <outputs>
        <output name="datasetListingFile"/>
    </outputs>

</task:task>
